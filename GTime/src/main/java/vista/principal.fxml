                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <VBox prefHeight="74.0" prefWidth="77.0">
                     <children>
                        <ImageView fitHeight="67.0" fitWidth="72.0" pickOnBounds="true" preserveRatio="true">
